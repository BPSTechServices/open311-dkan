# Ignore everything in docroot/core/
docroot/core/*
docroot/core/**

# Except the modules directory inside core
!docroot/core/modules/

# Ignore everything in docroot/core/modules/
docroot/core/modules/*
docroot/core/modules/**

# Except the automated_cron module
!docroot/core/modules/automated_cron/
!docroot/core/modules/automated_cron/**

# Ignore contributed modules and themes (managed via Composer)
docroot/modules/contrib/
docroot/themes/contrib/

# Ignore Composer dependencies
/vendor/

# Ignore user-uploaded files
docroot/sites/*/files/

# Ignore environment-specific settings
docroot/sites/*/settings.php
docroot/sites/*/services.yml

# Ignore DDEV specific directories and files that should not be shared
.ddev/.dbimage_build
.ddev/.ddev-docker-*
.ddev/docker-compose-*
.ddev/homeadditions/
.ddev/import-db/
.ddev/ssh-agent/

# Ignore temporary and cache files
/tmp/
*.cache
*.log

# Ignore OS-generated files
.DS_Store
Thumbs.db

# Ignore IDE configurations
.idea/
.vscode/
*.iml

# Ignore backup and archive files
*.sql
*.tar.gz
*.zip

# Ignore node modules if you have a frontend build process
node_modules/
